<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tv_about"
        android:fontFamily="@font/drift"
        android:textColor="@color/tablayoutColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="About"
        android:textSize="45dp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/img_dash"
        android:layout_width="match_parent"
        android:tint="#2196f3"
        android:layout_height="2dp"
        android:layerType="software"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/dash"
        android:layout_below="@id/tv_about"/>
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_below="@id/img_dash"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/tablayoutColor"
            android:drawableLeft="@drawable/ic_live_help_black_24dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/drift"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:text="  Consultant :"
            android:textSize="30dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_below="@id/relativeLayout1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/right"
            android:src="@drawable/ic_arrow_forward_black_24dp"

            android:layout_width="20dp"
            android:layout_height="30dp"

            />

        <TextView
            android:id="@+id/profile_consultant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/right"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/right"
            android:text="xyz"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_dash1"
        android:layout_width="match_parent"
        android:tint="#2196f3"
        android:layout_height="2dp"
        android:layerType="software"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/dash"
        android:layout_below="@id/relativeLayout2"/>
    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_below="@id/img_dash1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/tablayoutColor"
            android:layout_width="wrap_content"
            android:fontFamily="@font/drift"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_android_black_24dp"
            android:layout_alignParentTop="true"
            android:text="  Developers :"
            android:textSize="30dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_below="@id/relativeLayout3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/right1"
            android:src="@drawable/ic_arrow_forward_black_24dp"
            android:layout_width="20dp"
            android:layout_height="30dp"

            />

        <TextView
            android:id="@+id/profile_hinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/right1"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/right1"
            android:text="     HINAL LAUVOT "
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_below="@id/relativeLayout4"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/right2"
            android:src="@drawable/ic_arrow_forward_black_24dp"
            android:layout_width="20dp"
            android:layout_height="30dp"

            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_dash2"
        android:layout_width="match_parent"
        android:tint="#2196f3"
        android:layout_height="2dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/ic_male"
        android:layout_below="@id/relativeLayout5"/>

    <Button
        android:id="@+id/share"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_dash2"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:paddingRight="10dp"
        android:background="@drawable/button_corner"
        android:drawableLeft="@drawable/ic_menu_share"
        android:drawablePadding="5dp"
        android:padding="10dp"
        android:text="SHARE"
        android:textColor="@color/tablayoutColor"
        android:textSize="20sp" />





</RelativeLayout>
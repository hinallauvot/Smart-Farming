<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hinal.smartfarming">


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_plant"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_plant"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".StartActivity" />
        <activity
            android:name=".LoginActivity"
            android:parentActivityName=".StartActivity" />
        <activity
            android:name=".RegistrationActivity"
            android:parentActivityName=".StartActivity" />
        <activity android:name=".BrandsFilterActivity" />
        <activity
            android:name=".QueriesActivity"
            android:parentActivityName=".ChatRecyclerViewActivity" />
        <activity
            android:name=".ActPlanActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ProfileActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AboutActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ConsultantActivity"
            android:parentActivityName=".AboutActivity" />

        <activity android:name=".ChatRecyclerViewActivity"
            android:parentActivityName=".MainActivity"
            ></activity>
    </application>

</manifest>